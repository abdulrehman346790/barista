# ===========================================
# Basirat Backend Environment Variables
# Copy this file to .env and fill in your values
# ===========================================

# App Settings
SECRET_KEY=your-super-secret-key-change-this
ENVIRONMENT=development
DEBUG=True

# Neon PostgreSQL (Free tier: 0.5GB storage, 1 project)
# Get connection string from: https://console.neon.tech → Your Project → Connection Details
# Select "Pooled connection" for better performance
DATABASE_URL=postgresql://username:password@ep-xxx-xxx-123456.us-east-2.aws.neon.tech/neondb?sslmode=require

# Upstash Redis (Free tier: 10k commands/day)
# Get these from: https://console.upstash.com/redis
UPSTASH_REDIS_URL=https://your-redis.upstash.io
UPSTASH_REDIS_TOKEN=your-upstash-token

# Firebase (Free Spark plan)
# Get these from: Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com

# Huggingface (Free tier with rate limits)
# Get token from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# JWT Settings (optional - defaults provided)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting (optional - defaults provided)
SWIPE_LIMIT_PER_DAY=100
API_RATE_LIMIT_PER_MINUTE=100
